[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color0}
foreground = ${xrdb:color7}
primary    = ${xrdb:color2}
secondary = #e60053
alert = ${xrdb:color3}
icon = ${xrdb:color2}

[bar/main]
width = 100%
height = 34
fixed-center = true

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

override-redirect = false

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 2

font-0 = Gohu GohuFont:style=Regularsize=11;1
font-1 = WenQuanYi WenQuanYi Bitmap Song:size=11;1
